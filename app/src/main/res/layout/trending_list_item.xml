<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?colorPrimary">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iw_poster"
            android:layout_alignParentStart="true" />


        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/tw_title"
            android:layout_alignStart="@+id/tw_title"></FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/tw_title"
            android:textSize="18dp"
            android:textColor="#ffffff"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/tw_tagLine" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/tw_tagLine"
            android:layout_marginEnd="117dp"
            android:textColor="#ffffff"
            android:layout_below="@+id/tw_title"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="110dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/tw_year"
            android:textColor="#ffffff"
            android:textSize="20dp"

            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/tw_tagLine" />
    </RelativeLayout>
</LinearLayout>